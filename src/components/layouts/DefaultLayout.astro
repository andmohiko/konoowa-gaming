---
import Head from "~/components/Head.astro";
import Background from "~/components/layouts/Background.astro";
import BottomFooter from '~/components/navigations/BottomFooter/index.astro';
import FixedHeader from '~/components/navigations/FixedHeader/index.astro';

import '@fontsource/noto-sans-jp/400.css';
import '@fontsource/noto-sans-jp/700.css';
---

<!DOCTYPE html>
<html>
  <Head />
  <body>
    <Background />
    <div class='wrapper'>
      <FixedHeader />
      <main class='container'>
        <slot />
      </main>
      <BottomFooter />
    </div>
  </body>
</html>

<style>
.wrapper {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-height: 100vh;

  color: var(--color-white);

  font-family:
    'Noto Sans JP',
    -apple-system,
    BlinkMacSystemFont,
    Segoe UI,
    Roboto,
    Oxygen,
    Ubuntu,
    Cantarell,
    Fira Sans,
    Droid Sans,
    Helvetica Neue,
    sans-serif;
}
.container {
  margin: 0 0 160px;
  padding: 40px 0;
  min-height: calc(100vh - 70px);
  width: 100%;
  max-width: 1000px;
}
</style>