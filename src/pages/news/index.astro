---
import DefaultLayout from '~/components/layouts/DefaultLayout.astro'
import NewsContainer from '~/components/containers/NewsContainer/index.astro'
import { getNews } from '~/lib/microcms'

const articles = await getNews()
const sortedArticles = articles.sort(
    (a, b) =>
      new Date(b.publishedAt).getTime() - new Date(a.publishedAt).getTime(),
  )
---

<DefaultLayout>
  <NewsContainer articles={sortedArticles} />
</DefaultLayout>
